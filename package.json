{
  "name": "quikdb-contracts",
  "version": "1.0.0",
  "description": "QuikDB Smart Contract Deployment Scripts",
  "main": "index.js",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "clean": "forge clean",
    "format": "forge fmt",
    "snapshot": "forge snapshot",
    "deploy": "tsx scripts/DeploymentController.ts",
    "deploy:local": "tsx scripts/DeploymentController.ts local",
    "deploy:lsk:testnet": "RPC_URL=https://rpc.sepolia-api.lisk.com tsx scripts/DeploymentController.ts lisk-sepolia",
    "deploy:lsk:mainnet": "RPC_URL=https://rpc.api.lisk.com tsx scripts/DeploymentController.ts lisk-mainnet",
    "deploy:referral": "forge script scripts/DeployReferralSystem.s.sol:DeployReferralSystem --rpc-url $RPC_URL --broadcast --legacy -vvv",
    "deploy:referral:testnet": "forge script scripts/DeployReferralSystem.s.sol:DeployReferralSystem --rpc-url https://rpc.sepolia-api.lisk.com --broadcast --legacy -vvv",
    "upgrade:referral": "forge script scripts/DeployReferralSystem.s.sol:UpgradeReferralSystem --rpc-url $RPC_URL --broadcast --legacy -vvv",
    "fund:referral": "forge script scripts/DeployReferralSystem.s.sol:FundReferralSystem --rpc-url $RPC_URL --broadcast --legacy -vvv",
    "fund:referral:testnet": "forge script scripts/DeployReferralSystem.s.sol:FundReferralSystem --rpc-url https://rpc.sepolia-api.lisk.com --broadcast --legacy -vvv",
    "migrate:registry": "forge script scripts/MigrateUserNodeRegistry.s.sol:MigrateUserNodeRegistry --rpc-url $RPC_URL --broadcast --legacy -vvv",
    "migrate:registry:testnet": "forge script scripts/MigrateUserNodeRegistry.s.sol:MigrateUserNodeRegistry --rpc-url https://rpc.sepolia-api.lisk.com --broadcast --legacy -vvv",
    "validate-contracts": "tsx scripts/validate-contracts.ts",
    "validate-deployment": "tsx scripts/validateDeployment.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0"
  }
}
